-- Sequence: produto_id_seq

-- DROP SEQUENCE produto_id_seq;

CREATE SEQUENCE produto_id_seq
  INCREMENT 1
  MINVALUE 1
  MAXVALUE 9223372036854775807
  START 1
  CACHE 1;
ALTER TABLE produto_id_seq
  OWNER TO postgres;

-- Table: produtos

-- DROP TABLE produtos;

CREATE TABLE public.produtos
(
    id integer NOT NULL DEFAULT nextval('produto_id_seq'::regclass),
    descricao character(255) COLLATE pg_catalog."default" NOT NULL,
    url_imagem character(255) COLLATE pg_catalog."default" NOT NULL,
    genero character(255) COLLATE pg_catalog."pt-BR-x-icu",
    estoque integer,
    promocao boolean,
    preco_atual real,
    preco_antigo real,
    CONSTRAINT id_produto PRIMARY KEY (id)
)
WITH (
    OIDS = FALSE
)
TABLESPACE pg_default;

ALTER TABLE produtos
  OWNER TO "UAtanes";
COMMENT ON TABLE produtos
  IS 'Tabela para armazenar os dados dos produtos do ecommerce de exemplo do curso de ADS da FAPEN';
